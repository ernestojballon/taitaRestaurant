			margin 10px 0 10px 0
			display inline-block
			width 95%
			height 50px
			margin 0 0 0 2%
		.ordenar	
			border-radius 0 0 20px 20px
			border solid 2px azul_debil
			font-size 20px
			text-align center
			padding 5px 0 0 0
			float right
			display inline-block
			margin 10px 0 0 0
			width 100%
			background azul_fuerte
			display inline-block
			height 40px
			text-decoration none
			color white



